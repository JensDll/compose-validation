{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "node --experimental-loader esbuild-node-loader scripts/build.ts",
    "lint": "pnpm exec eslint --rule=\"no-console: [\"error\", { allow: [\"warn\", \"error\"] }]\" --max-warnings 0 --fix-dry-run \"./packages/**\"",
    "test": "pnpm run test:2 && pnpm run test:3",
    "test:2": "vue-demi-switch 2 vue2 && jest --runInBand",
    "test:3": "vue-demi-switch 3 vue3 && jest --runInBand",
    "test:dts": "pnpm run build && npm exec tsd",
    "test:dts-only": "pnpm exec tsd",
    "test:all": "pnpm run test:dts && pnpm run test",
    "dev": "rollup --config --watch",
    "dev:2": "pnpm run dev:local --filter \"vue2-playground\"",
    "dev:3": "pnpm run dev:local --filter \"vue3-playground\"",
    "postinstall": "husky install && vue-demi-switch 3 vue3"
  },
  "types": "test-dts/index.d.ts",
  "tsd": {
    "directory": "test-dts"
  },
  "dependencies": {
    "@rollup/plugin-alias": "3.1.9",
    "@rollup/plugin-replace": "4.0.0",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.21",
    "@types/puppeteer": "5.4.5",
    "@typescript-eslint/eslint-plugin": "5.15.0",
    "@typescript-eslint/parser": "5.15.0",
    "@validierung/shared": "workspace:*",
    "@validierung/test-utils": "workspace:*",
    "esbuild": "0.14.27",
    "esbuild-node-loader": "0.8.0",
    "esbuild-register": "3.3.2",
    "eslint": "8.11.0",
    "execa": "6.1.0",
    "fs-extra": "10.0.1",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "prettier": "2.6.0",
    "puppeteer": "13.5.1",
    "rollup": "2.70.1",
    "rollup-plugin-dts": "4.2.0",
    "rollup-plugin-esbuild": "4.8.2",
    "ts-jest": "27.1.3",
    "tsd": "0.19.1",
    "typescript": "4.6.2",
    "validierung": "workspace:*",
    "vue-demi": "0.12.4",
    "vue2": "npm:vue@2.6.14",
    "vue3": "npm:vue@3.2.31"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vue"
      ]
    }
  }
}
