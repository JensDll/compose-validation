{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "node --experimental-loader esbuild-node-loader scripts/build.ts",
    "build:watch": "node --experimental-loader esbuild-node-loader scripts/dev.ts --targets shared core",
    "lint": "pnpm exec eslint --rule=\"no-console: [\"error\", { allow: [\"warn\", \"error\"] }]\" --max-warnings 0 --fix-dry-run \"./packages/*/src/**/*.{ts,js}\"",
    "test": "pnpm run test:2 & pnpm run test:3",
    "test:2": "vue-demi-switch 2 vue2 && jest --runInBand",
    "test:3": "vue-demi-switch 3 vue3 && jest --runInBand",
    "test:dts": "pnpm run build && npm exec tsd",
    "test:dts-only": "pnpm exec tsd",
    "test:all": "pnpm run test:dts & pnpm run test",
    "vue:2": "pnpm run dev:local --filter \"vue2-examples\"",
    "vue:3": "pnpm run dev:local --filter \"vue3-examples\"",
    "postinstall": "husky install && vue-demi-switch 3 vue3"
  },
  "types": "test-dts/index.d.ts",
  "tsd": {
    "directory": "test-dts"
  },
  "dependencies": {
    "validierung": "workspace:*",
    "@validierung/shared": "workspace:*",
    "@validierung/jest-helper": "workspace:*",
    "@rollup/plugin-alias": "^3.1.8",
    "@rollup/plugin-node-resolve": "13.1.1",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "27.0.3",
    "@types/node": "17.0.2",
    "@types/yargs": "17.0.7",
    "@typescript-eslint/eslint-plugin": "5.8.0",
    "@typescript-eslint/parser": "5.8.0",
    "esbuild": "0.14.7",
    "esbuild-node-loader": "0.6.3",
    "esbuild-register": "3.2.1",
    "eslint": "8.5.0",
    "execa": "6.0.0",
    "fs-extra": "10.0.0",
    "husky": "7.0.4",
    "jest": "27.4.5",
    "prettier": "2.5.1",
    "rollup": "2.61.1",
    "rollup-plugin-dts": "4.0.1",
    "rollup-plugin-esbuild": "4.7.2",
    "ts-jest": "27.1.2",
    "tsd": "0.19.0",
    "typescript": "4.5.4",
    "vue2": "npm:vue@2.6.14",
    "vue3": "npm:vue@3.2.26",
    "yargs": "17.3.0"
  },
  "pnpm": {
    "overrides": {
      "@vue/composition-api": "1.4.2",
      "typescript": "4.5.4",
      "vite": "2.7.6",
      "vue-demi": "0.12.1"
    }
  }
}
