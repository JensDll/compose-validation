{
  "private": true,
  "scripts": {
    "build": "node --loader @esbuild-kit/esm-loader scripts/build.ts",
    "dev": "rollup --config --watch",
    "dev:2": "pnpm run --filter \"vue2-playground\" dev:local",
    "dev:3": "pnpm run --filter \"vue3-playground\" dev:local ",
    "test": "pnpm run test:2-run && pnpm run test:3-run",
    "test:2": "vue-demi-switch 2 vue2 && vitest",
    "test:2-run": "vue-demi-switch 2 vue2 && vitest run",
    "test:2.7": "vue-demi-switch 2 vue2.7 && vitest",
    "test:2.7-run": "vue-demi-switch 2 vue2.7 && vitest run",
    "test:3": "vue-demi-switch 3 vue3 && vitest",
    "test:3-run": "vue-demi-switch 3 vue3 && vitest run",
    "test:dts": "pnpm run build && pnpm exec tsd",
    "test:dts-only": "pnpm exec tsd",
    "test:all": "pnpm run test:dts && pnpm run test",
    "lint": "pnpm exec eslint --ignore-pattern \"/scripts/*\" --rule \"no-console: [\"error\", { allow: [\"warn\", \"error\"] }]\" --max-warnings 0 . & pnpm exec eslint --max-warnings 0 \"./scripts/**\"",
    "format": "prettier --write .",
    "postinstall": "husky install && vue-demi-switch 3 vue3"
  },
  "type": "module",
  "types": "dts/global.d.ts",
  "tsd": {
    "directory": "dts/tests"
  },
  "dependencies": {
    "@esbuild-kit/esm-loader": "2.4.2",
    "@internal/shared": "workspace:*",
    "@internal/test-utils": "workspace:*",
    "@rollup/plugin-alias": "3.1.9",
    "@rollup/plugin-node-resolve": "14.1.0",
    "@rollup/plugin-replace": "4.0.0",
    "@types/fs-extra": "9.0.13",
    "@types/node": "18.7.18",
    "@typescript-eslint/eslint-plugin": "5.38.0",
    "@typescript-eslint/parser": "5.38.0",
    "@vue/composition-api": "1.7.0",
    "c8": "7.12.0",
    "esbuild": "0.15.8",
    "esbuild-register": "3.3.3",
    "eslint": "8.23.1",
    "eslint-plugin-import": "2.26.0",
    "execa": "6.1.0",
    "fs-extra": "10.1.0",
    "husky": "8.0.1",
    "jsdom": "20.0.0",
    "prettier": "2.7.1",
    "prettier-plugin-tailwindcss": "0.1.13",
    "puppeteer": "18.0.5",
    "rollup": "2.79.1",
    "rollup-plugin-dts": "4.2.2",
    "rollup-plugin-esbuild": "4.10.1",
    "tsd": "0.24.1",
    "typescript": "4.8.3",
    "validierung": "workspace:*",
    "vitest": "0.23.4",
    "vue2": "npm:vue@legacy",
    "vue2.7": "npm:vue@v2-latest",
    "vue3": "npm:vue@latest"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vue"
      ]
    }
  }
}
