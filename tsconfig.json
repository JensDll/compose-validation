{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "preserveValueImports": true,
    "importsNotUsedAsValues": "error",
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ScriptHost"],
    "types": ["vitest/globals", "node"],
    "paths": {
      "@internal/shared": ["packages/shared/src"],
      "@internal/test-utils": ["packages/test-utils/src"],
      "@internal/validierung": ["packages/validierung/src"],
      "~shared/*": ["packages/shared/src/*"],
      "~test-utils/*": ["packages/test-utils/src/*"],
      "~validierung/*": ["packages/validierung/src/*"]
    }
  },
  "include": ["*.ts", "dts", "scripts", "packages/*/src", "packages/*/tests"],
  "exclude": ["**/dist/**", "playground"]
}
