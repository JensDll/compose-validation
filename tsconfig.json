{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "preserveValueImports": true,
    "importsNotUsedAsValues": "error",
    "allowJs": false,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ScriptHost"],
    "types": ["vite/client", "vitest/globals", "node"],
    "paths": {
      "@internal/shared": ["packages/shared/src"],
      "@internal/test-utils": ["packages/test-utils/src"],
      "validierung": ["packages/validierung/src"]
    }
  },
  "include": [
    "*.ts",
    "scripts",
    "test-dts",
    "packages/*/src",
    "packages/*/tests"
  ],
  "exclude": ["**/dist/**", "playground"]
}
