{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "allowJs": false,
    "checkJs": false,
    "lib": ["ES2020", "DOM"],
    "downlevelIteration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@compose-validation/*": ["packages/*/src"]
    }
  },
  "include": ["packages/*/src", "packages/*/__tests__", "test-dts", "scripts"],
  "exclude": ["**/dist", "**/publish"]
}
